<?php

if (!defined('ROOT_DIR')) {
    define('ROOT_DIR', dirname(dirname(getcwd() )));
}

$bootstrap = ROOT_DIR . '/vendor/codexten/yii-core/src/config/bootstrap.php';

if (!file_exists($bootstrap)) {
    $error = "Run composer to set up dependencies!";
    if (defined(STDERR)) {
        fwrite(STDERR, $error);
    } else {
        echo $error;
    }
    exit(1);
}

require_once $bootstrap;